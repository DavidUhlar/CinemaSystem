@page "/cinemahalls"
@using CinemaSystem.Models
@using Microsoft.EntityFrameworkCore
@inject CinemaSystem.Data.CinemaDbContext Db

<PageTitle>Cinema Halls</PageTitle>

<h1>Cinema Halls</h1>

@if (halls == null)
{
    <p><em>Loading...</em></p>
}
else if (!halls.Any())
{
    <p>No halls found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Total Rows</th>
                <th>Seats / Row</th>
                <th>Total Seats</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in halls)
            {
                <tr>
                    <td>@h.Name</td>
                    <td>@h.TotalRows</td>
                    <td>@h.SeatsPerRow</td>
                    <td>@h.Seats.Count()</td>
                </tr>
            }
        </tbody>
    </table>
    @foreach (var h in halls) {
        <table class="table">
            <thead>
                <tr>
                    <th>Row</th>
                    @for(int i = 1; i <= h.SeatsPerRow; i++) {
                        <th></th>
                    }
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= h.TotalRows; i++)
                {
                    <tr>

                        <th>@i</th>
                        @foreach (var seat in h.Seats.Where(s => s.Row == i).OrderBy(s => s.Number))
                        {
                            <td>@seat.Number</td>
                        }
                        
                        
                    
                    </tr>
                }
            </tbody>
        </table>
    }
}
@code {
    private List<CinemaSystem.Models.CinemaHall>? halls;

    protected override async Task OnInitializedAsync()
    {
        halls = await Db.CinemaHalls
            .Include(h => h.Seats)
            .OrderBy(h => h.Id)
            .ToListAsync();
    }

    private List<Seat> getSeats() {
        var seats = new List<Seat>();
        var hall = halls.ElementAt(0);
        
        seats.AddRange(hall.Seats);
        
        return seats;
	}
}