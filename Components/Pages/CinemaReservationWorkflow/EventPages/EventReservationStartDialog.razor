<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Create Reservation for @Event?.Title</MudText>
    </TitleContent>
    <DialogContent>
        @if (Event != null)
        {
            <MudText>Event: @Event.Title</MudText>
            <MudText>Start Time: @Event.StartTime.ToString("g")</MudText>
            <MudText>Base Price: @Event.BasePrice.ToString("C")</MudText>
            <MudText>Hall: @Event.CinemaHall?.Name</MudText>
        }

        <MudTextField @bind-Value="customerFirstName" Label="Name" Required="true" />
        <MudTextField @bind-Value="customerLastName" Label="Last Name" Required="true" />
        <MudTextField @bind-Value="customerEmail" Label="Email" Required="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Create Reservation</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public Event? Event { get; set; }

    private string customerFirstName = "";
    private string customerLastName = "";
    private string customerEmail = "";

    public record ReservationCreationResult(string FirstName, string LastName, string Email, Event? Event);

    private void Submit()
    {
        var result = new ReservationCreationResult(customerFirstName, customerLastName, customerEmail, Event);
        MudDialog.Close(DialogResult.Ok(result));
    }

    private void Cancel() => MudDialog.Cancel();
}